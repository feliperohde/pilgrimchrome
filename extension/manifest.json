{
  "manifest_version": 2,

  "name": "Pilgrim chrome",
  "description": "Pilgrim para chrome :)",
  "version": "1.0",

  "browser_action": {
   "default_icon": "favicon.png",
   "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",

    "cookies",
    "http://www.itelios.com/",
    "http://www.itelios.net/",
    "http://pilgrim.itelios.net/",
    "http://itelios.atlassian.net/"
  ],


  "background": {
    "scripts": ["scripts/background.js"]
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["scripts/main.js"],
      "css": ["css/main.css"]
    }
  ]
}